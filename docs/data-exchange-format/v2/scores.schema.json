{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://arcaeaoffline.sevive.xyz/schemas/def/v2/score.schema.json",
  "title": "Arcaea Score",
  "type": "object",
  "properties": {
    "type": {
      "const": "score"
    },
    "version": {
      "const": 2
    },
    "scores": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/score"
      }
    }
  },
  "required": ["type", "version", "scores"],
  "$defs": {
    "score": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "description": "The auto-increment field in SQL databases"
        },
        "uuid": {
          "type": "string",
          "format": "uuid"
        },
        "songId": {
          "type": "string"
        },
        "ratingClass": {
          "type": "integer",
          "minimum": 0,
          "maximum": 3
        },
        "score": {
          "type": "integer",
          "minimum": 0
        },
        "pure": {
          "type": "integer",
          "minimum": 0
        },
        "far": {
          "type": "integer",
          "minimum": 0
        },
        "lost": {
          "type": "integer",
          "minimum": 0
        },
        "date": {
          "type": "integer",
          "description": "A millisecond timestamp"
        },
        "maxRecall": {
          "type": "integer",
          "minimum": 0
        },
        "modifier": {
          "type": "integer",
          "enum": [0, 1, 2],
          "description": "0: NORMAL, 1: EASY, 2: HARD"
        },
        "clearType": {
          "type": "integer",
          "enum": [0, 1, 2, 3, 4, 5],
          "description": "0: TRACK LOST, 1: TRACK COMPLETE(NORMAL CLEAR), 2: FULL RECALL, 3: PURE MEMORY, 4: EASY CLEAR, 5: HARD CLEAR"
        },
        "source": {
          "type": "string",
          "description": "The source of this score. e.g. \"arcaeaoffline.manually\", \"arcaeaoffline.ocr\""
        },
        "comment": {
          "type": "string",
          "description": "User's comment on this score"
        }
      },
      "required": ["songId", "ratingClass", "score"]
    }
  }
}
